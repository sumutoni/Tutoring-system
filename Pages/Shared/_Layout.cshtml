<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutoringSys_core</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TutoringSys_core.styles.css" asp-append-version="true" />
    <style>
        .custom-bg {
            background-color:  #193366; /* Your custom color code */
        }
        .custom-color{
            color: #193366;
        }
        .customer-border{
            border-color: #193366;
        }
        font-face {
            font-family: 'comfortaa';
            src: url('fonts/Comfortaa-Regular.ttf') format('ttf');
        }
        body {
          font-family: Comfortaa, sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-lg">
                <h1 class="text-center navbar-brand d-flex display-2 custom-color" >
                    <img src="~/images/ttf.png" width="80" height="60" />
                    <span class=" fw-bold mt-3" style="cursor: default">TutorFriend</span>
                </h1>
                <div class=" justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a asp-page="/Registration/LoginTutor" class="nav-link text-white btn custom-bg">Login</a>
                        </li>
                        <li class="nav-item"><p class="nav-link text-dark">|</p></li>
                        <li class="nav-item"><a asp-page="/Registration/Signup" class="nav-link btn border-1 customer-border custom-color">Sign Up</a></li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:70px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TutoringSys_core - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutor Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TutoringSys_core.styles.css" asp-append-version="true" />
    <style>
        .custom-bg {
            background-color: #193366; /* Your custom color code */
        }

        .custom-color {
            color: #193366;
        }

        .customer-border {
            border-color: #193366;
        }

        font-face {
            font-family: 'comfortaa';
            src: url('fonts/Comfortaa-Regular.ttf') format('ttf');
        }

        body {
            font-family: Comfortaa, sans-serif;
        }
    </style>
</head>
<body class="container-fluid" style="background-color:#e6e6e6; height: 500px">
    @* NAVBAR *@
    <nav class="navbar fixed-top bg-white">
        <div class="container-md">
            <div class="navbar-brand d-flex align-items-center">
                <img src="~/images/ttf.png" width="90" height="60" />
                <h3 class="custom-color fw-bold fs-3 ms-3">TutorFriend</h3>
            </div>
            <div>
                <form method="post" class="d-flex align-items-center">
                    <input type="search" style="outline:none" id="searchBox" name="searchBox" class=" border border-2 rounded border-secondary py-2 px-4" Placeholder="Search course..." />
                    <button class="text-secondary bg-transparent border-0 align-items-center fw-bold" type="submit" id="searchbtn"><i class="bi bi-search" style="font-size: 25px;"></i></button>
                </form>
            </div>


            <div class="row ms-5">
                <div class="col-1"><i class="bi bi-person-circle text-secondary" style="font-size:30px"></i></div>
                <div class="ms-3 col-8">
                    <label class="custom-color fw-normal fs-5 text-lg-start">Welcome</label>
                    <label class="custom-color fw-bold fs-4 text-lg-start">@Model.user_names</label>
                </div>

            </div>
        </div>
    </nav>

    <div class=" row w-100 h-100" style="margin-top:120px">

        <div class="col-md-2 d-flex flex-column justify-content-start align-items-center pt-3 bg-white me-3 rounded-end">
            <div class="d-flex flex-column">
                <a class="text-secondary text-decoration-none fs-5 ms-4 mb-2" href="/Dashboard/Tutor_dash"><i class="bi bi-house-door me-2"></i>Home</a>
                <a class="text-secondary text-decoration-none fs-5 ms-4 mb-2" href="/Appointments/Reserved"><i class="me-2 bi bi-calendar-event"></i>My sessions</a>
                <a class="text-secondary text-decoration-none fs-5 ms-4 mb-2" href="/Profiles/Profile"><i class="bi bi-person me-2"></i>Profile</a>
                <a class="text-secondary text-decoration-none fs-5 ms-4 mb-2" asp-page-handler="logout"><i class="bi bi-box-arrow-right me-2"></i>Log out</a>
            </div>
        </div>
        <div role="main" class="pb-3 col-md-9 rounded">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>
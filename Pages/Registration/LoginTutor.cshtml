@page
@model TutoringSys_core.Pages.Registration.LoginTutorModel
@{
}
<form method="post" class=" form container mt-5">
    <h1 class="text-center custom-color">Login</h1>
    <div class="my-3 row justify-content-center">
        @if (Model.message.Length > 0)
        {
            <div class="col-md-5 alert alert-danger alert-dismissible fade show">
                <label>@Model.message</label>
                <button class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="mt-3 row justify-content-center">
        <div class=" col-md-3 justify-content-center">
            <label for="tutor_id">ID</label>
            <input type="text" name="user_id" id="user_id" class="form-control" required/>
        </div>
    </div>
    <div class="mt-2 row justify-content-center">
        <div class=" col-md-3 justify-content-center">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" required/>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <button type="submit" class="btn custom-bg text-white col-md-1" OnClick="">Login</button>
    </div>
</form>